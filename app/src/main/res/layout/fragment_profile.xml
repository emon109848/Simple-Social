<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-19dp">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="My Friends"
        android:textColor="#050505"
        android:textSize="@dimen/_18mdp"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toBottomOf="@+id/textView18" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toTopOf="parent">

        <com.github.florent37.diagonallayout.DiagonalLayout
            android:id="@+id/diagonalLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="30dp"
            diagonal:diagonal_angle="10"
            diagonal:diagonal_direction="left"
            diagonal:diagonal_position="bottom">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <View
                android:id="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#63121111" />


        </com.github.florent37.diagonallayout.DiagonalLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"
        android:padding="3dp"
        android:src="@drawable/img"
        diagonal:civ_border_color="@color/white"
        diagonal:civ_border_width="@dimen/_2mdp"
        diagonal:layout_constraintBottom_toBottomOf="@id/linear"
        diagonal:layout_constraintEnd_toEndOf="@id/linear"
        diagonal:layout_constraintStart_toStartOf="@id/linear"
        diagonal:layout_constraintTop_toTopOf="@id/linear"
        diagonal:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingClass" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked"
        diagonal:layout_constraintBottom_toBottomOf="@+id/linear"
        diagonal:layout_constraintEnd_toEndOf="@+id/profile_image"
        diagonal:layout_constraintHorizontal_bias="0.9"
        diagonal:layout_constraintStart_toStartOf="@+id/profile_image"
        diagonal:layout_constraintTop_toTopOf="@+id/profile_image"
        diagonal:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SH Emon"
        android:textColor="#000000"
        android:textSize="@dimen/_16font_mdp"
        diagonal:layout_constraintEnd_toEndOf="@+id/profile_image"
        diagonal:layout_constraintHorizontal_bias="0.4"
        diagonal:layout_constraintStart_toStartOf="@+id/profile_image"
        diagonal:layout_constraintTop_toBottomOf="@+id/linear" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Android Developer"
        android:textSize="@dimen/_8mdp"
        diagonal:layout_constraintEnd_toEndOf="@+id/textView4"
        diagonal:layout_constraintStart_toStartOf="@+id/textView4"
        diagonal:layout_constraintTop_toBottomOf="@+id/textView4" />

    <View
        android:id="@+id/comment_view"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/orange"
        diagonal:layout_constraintEnd_toStartOf="@+id/call_view"
        diagonal:layout_constraintHorizontal_bias="0.5"
        diagonal:layout_constraintStart_toEndOf="@+id/add_friend"
        diagonal:layout_constraintTop_toBottomOf="@id/textView5" />

    <View
        android:id="@+id/add_friend"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="#1E84C8"
        diagonal:layout_constraintEnd_toStartOf="@+id/comment_view"
        diagonal:layout_constraintHorizontal_bias="0.5"
        diagonal:layout_constraintHorizontal_chainStyle="packed"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toBottomOf="@id/textView5" />

    <View
        android:id="@+id/call_view"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/green"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintHorizontal_bias="0.5"
        diagonal:layout_constraintStart_toEndOf="@+id/comment_view"
        diagonal:layout_constraintTop_toBottomOf="@id/textView5" />

    <ImageView
        android:id="@+id/add_friend_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_person"
        diagonal:layout_constraintBottom_toBottomOf="@+id/add_friend"
        diagonal:layout_constraintEnd_toEndOf="@+id/add_friend"
        diagonal:layout_constraintHorizontal_bias="0.4"
        diagonal:layout_constraintStart_toStartOf="@+id/add_friend"
        diagonal:layout_constraintTop_toTopOf="@+id/add_friend" />

    <ImageView
        android:id="@+id/comment_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment"
        diagonal:layout_constraintBottom_toBottomOf="@+id/comment_view"
        diagonal:layout_constraintEnd_toEndOf="@+id/comment_view"
        diagonal:layout_constraintStart_toStartOf="@+id/comment_view"
        diagonal:layout_constraintTop_toTopOf="@+id/comment_view" />

    <ImageView
        android:id="@+id/call_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call"
        diagonal:layout_constraintBottom_toBottomOf="@+id/call_view"
        diagonal:layout_constraintEnd_toEndOf="@+id/call_view"
        diagonal:layout_constraintStart_toStartOf="@+id/call_view"
        diagonal:layout_constraintTop_toTopOf="@+id/call_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toBottomOf="@+id/comment_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Followers"
                android:textSize="@dimen/_14mdp"
                diagonal:layout_constraintEnd_toStartOf="@+id/view15"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintStart_toStartOf="parent"
                diagonal:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view15"
                android:layout_width="@dimen/_1mdp"
                android:layout_height="@dimen/_30mdp"
                android:background="#252222"
                diagonal:layout_constraintEnd_toStartOf="@+id/textView13"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintStart_toEndOf="@+id/textView12"
                diagonal:layout_constraintTop_toTopOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textSize="@dimen/_14mdp"
                diagonal:layout_constraintEnd_toStartOf="@+id/view16"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintStart_toEndOf="@+id/view15"
                diagonal:layout_constraintTop_toTopOf="@+id/view15" />

            <View
                android:id="@+id/view16"
                android:layout_width="@dimen/_1mdp"
                android:layout_height="@dimen/_30mdp"
                android:background="#252222"
                diagonal:layout_constraintEnd_toStartOf="@+id/textView14"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintStart_toEndOf="@+id/textView13"
                diagonal:layout_constraintTop_toTopOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textSize="@dimen/_14mdp"
                diagonal:layout_constraintEnd_toEndOf="parent"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintStart_toEndOf="@+id/view16"
                diagonal:layout_constraintTop_toTopOf="@+id/view16" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="545"
                android:textColor="#000000"
                diagonal:layout_constraintBottom_toBottomOf="parent"
                diagonal:layout_constraintEnd_toEndOf="@+id/textView12"
                diagonal:layout_constraintStart_toStartOf="@+id/textView12"
                diagonal:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="256"
                android:textColor="#000000"
                diagonal:layout_constraintBottom_toBottomOf="parent"
                diagonal:layout_constraintEnd_toEndOf="@+id/textView13"
                diagonal:layout_constraintStart_toStartOf="@+id/textView13"
                diagonal:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="32"
                android:textColor="#000000"
                diagonal:layout_constraintBottom_toBottomOf="parent"
                diagonal:layout_constraintEnd_toEndOf="@+id/textView14"
                diagonal:layout_constraintStart_toStartOf="@+id/textView14"
                diagonal:layout_constraintTop_toBottomOf="@+id/textView14"
                diagonal:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs."
        android:textSize="@dimen/_14font_mdp"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8mdp"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintHorizontal_bias="0.5"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toBottomOf="@+id/textView19" />


</androidx.constraintlayout.widget.ConstraintLayout>